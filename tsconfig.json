{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "screens/*": ["src/screens/*"],
      "config/*": ["src/config/*"],
      "constants/*": ["src/constants/*"],
      "interfaces/*": ["src/interfaces/*"],
      "services/*": ["src/services/*"],
      "slices/*": ["src/slices/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
